@model Knowledge_Management.Models.tbl_login

@{
    Layout = null;
}

    @using (Ajax.BeginForm("Index", "Home"
                    , new AjaxOptions
                    {
                        UpdateTargetId = "pnl_login",
                        InsertionMode = InsertionMode.ReplaceWith,
                        HttpMethod = "Post",
                        OnSuccess = "onLoginSuccess"
                    }))
    {

        @Html.AntiForgeryToken()

        <div class="title_login">
            <i class="fa fa-lock fa-lg"></i> Login
        </div>
        <div class="login-form">
            <div class="form-group log-status">
                @Html.TextBoxFor(u => u.username, new { @class = "form-control", @placeholder = "Username" })
                <i class="fa fa-user"></i>
            </div>
            <div class="form-group log-status">
                @Html.PasswordFor(u => u.pass, new { @class = "form-control", @placeholder = "Password" })
                <i class="fa fa-lock"></i>
            </div>
            <span class="alert" >Login credentials are incorrect</span>
            <div class="col-xs-12 top_buffer10">
                <input type="submit" class="btn btn-primary" value="login" />
            </div>
        </div>

    }


 


















