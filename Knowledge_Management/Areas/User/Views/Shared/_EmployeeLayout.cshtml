
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" , initial-scale="1.0" />
    <title>Knowledge Management Systems - @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/management")

    @RenderSection("HeadSection", false)


</head>
<body>

    <div id="wrapper" >
        <div id="sidebar-wrapper">
            <!-- Sidebar -->
            <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
                <ul class="nav sidebar-nav">
                    <li class="sidebar-brand">
                        <a id="menu-toggle" href="#">
                            Employee Section
                            <span id="main_icon" class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                    </li>
                    @if (User.IsInRole("DataEntry"))
                    {
                        <li>
                            <a href="@Url.Action("Index", "InsertInfo", new { Area = "User" })">Create or Share Knowledge<i class="sub_icon fa fa-fw fa-pencil-square-o fa-lg" data-toggle="tooltip" title="Create or Share Knowledge"></i> </a>
                        </li>
                    }
                    @if (User.IsInRole("DataView"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="caret"></span>Search Knowledge Repository<i class="sub_icon fa fa-fw fa-search fa-lg" data-toggle="tooltip" title="Search Knowledge Repository"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="dropdown-header"></li>
                                <li><a href="@Url.Action("SearchAll", "SearchInfo", new { Area = "User" })">Question Repository<i class="sub_icon fa fa-question fa-lg" data-toggle="tooltip" title="Question Repository"></i></a></li>
                                <li><a href="@Url.Action("Index", "SearchKey", new { Area = "User" })">Find by Keywords<i class="sub_icon fa fa-key fa-lg" data-toggle="tooltip" title="Find by Keywords"></i></a></li>
                                <li><a href="@Url.Action("YourSolution", "Solution", new { Area = "User" })">Your Solutions<i class="sub_icon fa fa-commenting fa-lg" data-toggle="tooltip" title="Your Solutions"></i></a></li>
                            </ul>
                        </li>
                    }
                    <li>
                        <a href="@Url.Action("Index", "EmployeeProfile", new { Area = "User" })">Profile<i class="sub_icon fa fa-fw fa-user fa-lg" data-toggle="tooltip" title="Profile"></i> </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout", "Home", new { area = "" })"> Logout <i class="sub_icon fa fa-fw fa-sign-out fa-lg" data-toggle="tooltip" title="Logout"></i> </a>
                    </li>

                </ul>
            </nav>
        </div><!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper">

                <div class="container">
                    <div class="row">

                        <div class="col-xs-12">

                            <div class="col-xs-2">
                                <img src="~/img/header2.png" alt="" class="header_mng" />
                            </div>
                            <div class="col-xs-10">
                                <div class="col-xs-12 top_buffer20">
                                    Welcome
                                    <span style="color:#0094ff">
                                        @((User.Identity as UserIdentity).Fullname)

                                    </span>
                                </div>
                                <div class="col-xs-7 top_buffer50">
                                    <h5>@ViewBag.Title</h5>
                                    <span class="border_admin"></span>
                                    <h6 style="color:#8076a2">@ViewBag.Subtitle </h6>
                                </div>
                            </div>
                       </div>
                      

                        <div class="col-xs-10">
                            @RenderBody()

                        </div>

                    </div>
                   
                    </div>


                </div>
            <!-- /#page-content-wrapper -->

        </div>
    <!-- /#wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/management")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
