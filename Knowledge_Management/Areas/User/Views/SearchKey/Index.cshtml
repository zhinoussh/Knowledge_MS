@model Knowledge_Management.Areas.User.ViewModels.SearchKeywordViewModel
@{
    ViewBag.Title = "Keywords";
    Layout = "~/Areas/User/Views/Shared/_EmployeeLayout.cshtml";
}


<div class="col-xs-12 top_buffer20">
    <div class="col-xs-2 nopadding top_buffer10">
        @Html.LabelFor(model => model.lst_strategy, new { @class = "div_lable" })
    </div>
    <div class="col-xs-4 nopadding">
        @Html.DropDownListFor(model => model.strategy_id, new SelectList(Model.lst_strategy, "Value", "Text")
                  , "All items", new { @class = "form-control", id = "dropdown_strategy" })
    </div>
</div>

    <div class="col-xs-12 top_buffer20">

    <div class="col-xs-2 nopadding top_buffer10" >
        @Html.LabelFor(model => model.lst_dep_objective, new { @class = "div_lable" })
    </div>
    <div class="col-xs-4 nopadding">
        @Html.DropDownListFor(model => model.dep_obj_id, new SelectList(Model.lst_dep_objective, "Value", "Text")
                    , "All items", new { @class = "form-control", id = "dropdown_dep_Objective" })
    </div>
</div>

        <div class="col-xs-12 top_buffer20">

            <div class="col-xs-2 nopadding top_buffer10">
                @Html.LabelFor(model => model.lst_job_desc, new { @class = "div_lable" })
            </div>
            <div class="col-xs-4 nopadding">
                @Html.DropDownListFor(model => model.job_desc_id, new SelectList(Model.lst_job_desc, "Value", "Text")
                              , "All items", new { @class = "form-control", id = "dropdown_jobDesc" })
            </div>
            <div class="col-xs-2">

                <input type="button" class="btn btn-primary" value="Search" id="search_btn" />
            </div>

        </div>




<div class="col-xs-12 top_buffer20 nopadding ">
    <table id="KeywordDT" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>DepObj_Id</th>
                <th>JobDesc_Id</th>
                <th>Strategy_Id</th>
                <th>#</th>
                <th>Keywords</th>
                <th>Details</th>
                <th>Questions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section scripts{
    <script src="~/Areas/User/Scripts/KeywordDT.js"></script>
}






