@model Knowledge_Management.Areas.Admin.ViewModels.DepartmentObjectiveViewModel

@{

    Layout = null;
}

@using (Ajax.BeginForm("Delete_Objective", "ObjectiveDepartment"
                    , new AjaxOptions
                    {
                        InsertionMode = InsertionMode.ReplaceWith,
                        HttpMethod = "Post",
                        OnSuccess = "SuccessDelete"
                    }))
{


    @Html.AntiForgeryToken()

    <div class="modal-header modal-header-danger">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" aria-hidden="true">&times;</button>
        <h6><i class="glyphicon glyphicon-alert"></i>Alert</h6>
    </div>
    <div class="modal-body">
        Are you sure to delete this row?
    </div>

    <div class="modal-footer">
        <input type="submit" class="btn btn-confirm" value="Confirm" />
        <button type="button" class="btn btn-confirm" data-dismiss="modal">Cancel</button>
        @Html.HiddenFor(d => d.obj_id)
    </div>
}


