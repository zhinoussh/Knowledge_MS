<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" , initial-scale="1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/management")
    @RenderSection("HeadSection", false)
</head>
<body >

    <div id="wrapper">
        <div id="sidebar-wrapper">
            <!-- Sidebar -->
            <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
                <ul class="nav sidebar-nav">
                    <li class="sidebar-brand">
                      
                        <a id="menu-toggle" href="#">
                            System Sections
                            <span id="main_icon" class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="caret"></span>Base Information<i class="sub_icon fa fa-fw fa-cog fa-lg"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Define Base Information...</li>
                            <li><a href="@Url.Action("Index", "Strategy", new { Area="Admin"})">Strategy Description</a></li>
                            <li><a href="@Url.Action("Index", "Department", new { area = "Admin" })">Organization Departments</a></li>
                            <li><a href="@Url.Action("Index", "Job", new { area = "Admin" })">Job Titles</a></li>
                            <li><a href="@Url.Action("Index", "Employee", new { area = "Admin" })">Employees</a></li>
                        </ul>
                    </li>
                    <li style="padding-left:15px">
                        <a href="@Url.Action(" index", "JobDescription" , new { area="Admin" })">Job Descriptions<i class="sub_icon fa fa-fw fa-bank fa-lg"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="caret"></span>Questions & Solutions<i class="sub_icon fa fa-fw fa-folder fa-lg"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Based on...</li>
                            <li><a href="@Url.Action("Personel", "ViewEntrybyEmployee", new { area = "Admin" })">Employees</a></li>
                            <li><a href="@Url.Action("Index", "ViewEntrybyJob", new { area = "Admin" })">Occupations</a></li>
                            <li><a href="@Url.Action("Index", "ViewEntrybyDetail", new { area = "Admin" })">Details</a></li>
                        </ul>
                    </li>
                    <li style="padding-left:15px">
                        <a href="@Url.Action("Logout", "Home", new { area = "User" })">Logout <i class="sub_icon fa fa-fw fa-sign-out fa-lg"></i></a>
                    </li>

                </ul>
            </nav>
            </div><!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper">

                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">

                            <div class="col-xs-2">
                                <img src="~/img/header2.png" alt="" class="header_mng" />
                            </div>
                            <div class="col-xs-8 top_buffer50">
                                <h5>@ViewBag.Title</h5>
                                <span class="border_admin"></span>
                                <h6 style="color:#8076a2">@ViewBag.Subtitle </h6>
                            </div>
                       </div>

                            <div class="col-xs-10">
                                @RenderBody()
                            </div>
                        </div>
                </div>

            </div>
            <!-- /#page-content-wrapper -->

        </div>

  

    <!-- /#wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/management")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>