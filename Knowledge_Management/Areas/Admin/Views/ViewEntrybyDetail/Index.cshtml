@model Knowledge_Management.ViewModels.DetailQuestionViewModel
@{
    ViewBag.Title = "مشاهده مسائل، راهکارها و اسناد وارد شده بر اساس جزئیات";
    Layout = "~/Areas/Admin/Views/Shared/_ManagementLayout.cshtml";
}

<!-- Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="confirm-container">

        </div>
    </div>
</div>
<!-- /end Modal -->
<!-- Modal -->
<div class="modal fade" id="DetailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="confirm-container">
            <div class="modal-header modal-header-info">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" aria-hidden="true">&times;</button>
                <h6><i class="glyphicon glyphicon-info-sign"></i>جزئیات مسئله</h6>

            </div>
            <div class="modal-body">
                <div class="border-modal">

                    <div class="editor-field" style="width:100%">
                        <label id="question"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="keywords"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="strategy_name"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="dep_objective"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="job_desc"></label>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /end Modal -->

<h5>مشاهده مسائل، راهکارها و اسناد وارد شده بر اساس جزئیات</h5>
<span class="border_admin"></span>


<div style="float:right; width:100%; margin:2% 0 0 0">
    <div class="editor-field" style="width:12%; margin-top:1%">
        واحد سازمانی
    </div>
    <div class="editor-field" style="width:20%;">
        @Html.DropDownListFor(model => model.dep_id, new SelectList(Model.lst_dep, "Value", "Text")
            , new { @class = "form-control", id = "dropdown_department" })
    </div>

    <div class="editor-label" style="width:7%;">
        شغل
    </div>
    <div class="editor-field" style="width:20%;">
        @Html.DropDownListFor(model => model.job_id, new SelectList(Model.lst_job, "Value", "Text")
                     , new { @class = "form-control", id = "dropdown_job" })
    </div>


</div>

<div style="float:right; width:100%;margin-top:2%">


   

    <div class="editor-field" style="width:12%;margin-top:1%">
        @Html.LabelFor(model => model.lst_dep_objective)
    </div>
    <div class="editor-field" style="width:20%;">
        @Html.DropDownListFor(model => model.dep_obj_id, new SelectList(Model.lst_dep_objective, "Value", "Text")
           , "----", new { @class = "form-control", id = "dropdown_dep_Objective" })
    </div>

    <div class="editor-label" style="width:7%;">
        @Html.LabelFor(model => model.lst_job_desc)
    </div>
    <div class="editor-field" style="width:20%;">
        @Html.DropDownListFor(model => model.job_desc_id, new SelectList(Model.lst_job_desc, "Value", "Text")
            , "----", new { @class = "form-control", id = "dropdown_jobDesc" })
    </div>

    <div class="editor-label" style="width:7%;">
        @Html.LabelFor(model => model.lst_strategy)
    </div>
    <div class="editor-field" style="width:20%;">
        @Html.DropDownListFor(model => model.strategy_id, new SelectList(Model.lst_strategy, "Value", "Text")
         , "----", new { @class = "form-control", id = "dropdown_strategy" })
    </div>
    <div class="col-xs-2" style="width:150px; float:right; margin:3% 40% 2% 0">
        <input type="button" class="btn btn-primary" value="مشاهده مسائل" id="btn_view_Question" />
    </div>

</div>

<div style="float:right; width:100%;margin:0 0 2% 0">
    <table id="SearchQuestionDT" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Keywords</th>
                <th>job_Desc</th>
                <th>dep_Obj</th>
                <th>Strategy</th>
                <th>fullQuestion</th>
                <th>#</th>
                <th >شرح مسئله</th>
                <th>جزئیات</th>
                <th>راهکارها</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section scripts{
    <script src="~/Scripts/Datatables/DetailEntryDT.js"></script>
}
