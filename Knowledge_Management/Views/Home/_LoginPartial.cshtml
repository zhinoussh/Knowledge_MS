@model Knowledge_Management.Models.tbl_login

@{
    Layout = null;
       }

@using (Ajax.BeginForm("Index", "Home"
                    , new AjaxOptions
                    {
                        UpdateTargetId = "targetId",
                        InsertionMode = InsertionMode.ReplaceWith,
                        HttpMethod = "Post",
                        OnSuccess = "onLoginSuccess"
                    }))
{

    @Html.AntiForgeryToken()

    <div class="login-form">

        <h5>ورود به سیستم</h5>
        <div class="form-group log-status">
            @Html.TextBoxFor(u => u.username, new { @class = "form-control", @placeholder = "Username" })
            <i class="fa fa-user"></i>
        </div>
        <div class="form-group log-status">
            @Html.PasswordFor(u => u.pass, new { @class = "form-control", @placeholder = "Password" })
            <i class="fa fa-lock"></i>
        </div>
        <span class="alert">اطلاعات وارد شده صحیح نمی باشد</span>

        <input type="submit" class="log-btn" value="ورود" />
    </div>

}



    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script type="text/javascript">

        $(document).ready(function () {

            error_alert = function () {
                $('.log-status').addClass('wrong-entry');
                $('.alert').fadeIn(500);
                setTimeout("$('.alert').fadeOut(1500);", 3000);
            };


            $('.form-control').keypress(function () {
                $('.log-status').removeClass('wrong-entry');
            });

        });

        var onLoginSuccess = function (result) {
            if (result.url) {
                // if the server returned a JSON object containing an url 
                // property we redirect the browser to that url
                window.location.href = result.url;
            }
        }
    </script>

    @if (ViewBag.Fail == "true")
    {
        <script type="text/javascript">
            $('.log-status').addClass('wrong-entry');
            $('.alert').fadeIn(500);
            setTimeout("$('.alert').fadeOut(1500);", 3000);</script>
    }


















