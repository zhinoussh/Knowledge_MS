<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" , initial-scale= "1.0" />
    <title>شرکت تبلور دانش چهلستون - @ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("HeadSection", false)

</head>
<body>
    <div class="container">
        <div class="row">
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="navbar-brand navbar-right">!به سیستم مدیریت دانش شرکت تبلور دانش چهلستون خوش آمدید</div>

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse navbar-left">
                        <ul class="nav navbar-nav" >
                            <li>@Html.ActionLink("تماس با ما", "Contact", "Home")</li>
                            <li>@Html.ActionLink("درباره ما", "About", "Home")</li>
                            <li>@Html.ActionLink("ورود به سیستم", "Index", "Home")</li>
                        </ul>
                </div>
            </nav>


        </div>

    </div>

    <div>
        <img src="~/img/header.jpg" alt="" class="header_img" />
    </div>

  
                @RenderBody()
        
    
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
