@model Knowledge_Management.ViewModels.ViewQuestionViewModel

@{
    ViewBag.Title = "مشاهده مسائل مطرح شده";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<!-- Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="confirm-container">

        </div>
    </div>
</div>
<!-- /end Modal -->

<!-- Modal -->
<div class="modal fade" id="DetailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="confirm-container">
            <div class="modal-header modal-header-info">
               <button type="button" class="close" data-dismiss="modal" aria-label="Close" aria-hidden="true">&times;</button>
                <h6><i class="glyphicon glyphicon-info-sign"></i>جزئیات مسئله</h6>

            </div>
            <div class="modal-body">
                <div class="border-modal">

                    <div class="editor-field" style="width:100%">
                        <label id="question"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="keywords"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="strategy_name"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="dep_objective"></label>
                    </div>
                    <div class="editor-field" style="width:100%">
                        <label id="job_desc"></label>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /end Modal -->

<h5>مشاهده مسائل</h5>
<span class="border_admin" ></span>

    <div class="editor-field" style="width:100%;">  
        @Html.DisplayFor(model => model.Description)
    </div>

@Html.HiddenFor(model => model.emp_id, new { id = "hd_id_emp" })
@Html.HiddenFor(model => model.job_id, new { id = "hd_id_job" })
@Html.HiddenFor(model => model.dep_id, new { id = "hd_id_dep" })
@Html.HiddenFor(model => model.jobDesc_id, new { id = "hd_id_jobDesc" })
@Html.HiddenFor(model => model.depObj_id, new { id = "hd_id_depObj" })
@Html.HiddenFor(model => model.strategy_id, new { id = "hd_id_strategy" })

<div class="alert alert-success fade in" role="alert" style="float:right; width:100%; visibility:hidden" id="div_alert">
    <a href="#" class="close" id="close_delete_modal">&times;</a>
    <label id="alert_success" style="margin-right:5px"></label>
</div>

<div style="float:right; width:100%;margin:0 0 2% 0">
    <table id="SearchQuestionDT" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Keywords</th>
                <th>job_Desc</th>
                <th>dep_Obj</th>
                <th>Strategy</th>
                <th>fullQuestion</th>
                <th>ردیف</th>
                <th class="dt-head-right">شرح مسئله</th>
                <th>جزئیات</th>
                <th>راهکارها</th>
                <th>حذف</th>

            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section scripts{
    <script src="~/Scripts/Datatables/ViewQuestionDT.js"></script>

}
