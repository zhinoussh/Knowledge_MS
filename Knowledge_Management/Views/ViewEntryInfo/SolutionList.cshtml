@model Knowledge_Management.ViewModels.SolutionViewModel
@{
    ViewBag.Title = "راهکارهای مسئله";
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}

<!-- Delete Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="confirm-container">

        </div>
    </div>
</div>
<!-- /end Delete Modal -->



<h5>راهکارهای مسئله</h5>
<span class="border_admin"></span>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
            <h6 class="panel-title">
                <a role="button" data-toggle="collapse" href="#collapseQuestion" aria-expanded="true" aria-controls="collapseOne">
                    @Html.LabelFor(model => model.question)
                </a>
            </h6>
        </div>
        <div id="collapseQuestion" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
                @Html.DisplayFor(model => model.question)
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingTwo">
            <h4 class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" href="#collapseSolution" aria-expanded="false" aria-controls="collapseTwo">
                    @Html.LabelFor(model => model.solutions)
                </a>
            </h4>
        </div>
        <div id="collapseSolution" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
            <div class="panel-body">

                <div class="alert alert-success fade in" role="alert" style="float:right; width:100%; visibility:hidden" id="div_alert">
                    <a href="#" class="close" id="close_delete_modal">&times;</a>
                    <label id="alert_success" style="margin-right:5px"></label>
                </div>

                <table id="SoutionListDT" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ردیف</th>
                            <th class="dt-head-right">راهکار</th>
                            <th>وضعیت تایید</th>
                            <th>تعداد اسناد</th>
                            <th>مشاهده کامل</th>
                            <th>تایید / رد</th>
                            <th>حذف</th>

                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>
        </div>
    </div>
 
</div>


@Html.HiddenFor(model => model.question_id, new { id = "hd_id_question" })


@section scripts{
    <script src="~/Scripts/Datatables/ViewSolutionDT.js"></script>
}


